{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "Node",
    "types": [],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,


    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "resolveJsonModule": true,

    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
    "composite": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
